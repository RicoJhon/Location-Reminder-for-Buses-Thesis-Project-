<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reminderBG"
    android:layout_margin="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/txt_counter"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBottomtext"
        android:textSize="50sp" />
    <LinearLayout
        android:id="@+id/radius"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <TextView
            android:id="@+id/txt_minus"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_background"
            android:paddingTop="20dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/colorbtnSignIn"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_reset"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:text="RESET"
            android:textAlignment="center"
            android:textColor="@color/colorbtnSignIn"
            android:textSize="20sp" />
        <TextView
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:id="@+id/txt_add"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/colorbtnSignIn"
            android:textSize="30sp"
            android:background="@drawable/btn_radius_background"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnSelect"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_sign_in_background"
        android:text="SELECT"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="240dp"></View>
</RelativeLayout>